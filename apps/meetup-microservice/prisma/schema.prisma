generator client {
  provider = "prisma-client-js"
  output   = "./../../../node_modules/@prisma-meetup/client"
}

datasource db {
  provider = "postgresql"
  url      = env("MEETUP_DATABASE_URL")
}

model Meetups {
  id          Int    @id @unique @default(autoincrement())
  title       String
  description String
  date        String
  place       String

  organizerId Int

  latitude  Float
  longitude Float
  radius    Int?  @default(100)

  tags    MeetupsToTags[]
  members Members[]
}

model Tags {
  id      Int             @id @unique @default(autoincrement())
  title   String          @unique
  meetups MeetupsToTags[]
}

model MeetupsToTags {
  id Int @id @unique @default(autoincrement())

  meetup   Meetups @relation(fields: [meetupId], references: [id])
  meetupId Int

  tag   Tags @relation(fields: [tagId], references: [id])
  tagId Int
}

model Members {
  id Int @id @unique @default(autoincrement())

  meetup   Meetups @relation(fields: [meetupId], references: [id])
  meetupId Int

  userId Int
}
