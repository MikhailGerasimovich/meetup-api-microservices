generator client {
  provider = "prisma-client-js"
  output   = "./../../../node_modules/@prisma-meetup/client"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:957483@localhost:5432/meetup_microservice_db?schema=public"
}

model Meetups {
  id          Int    @id @unique @default(autoincrement())
  title       String
  description String
  date        String
  place       String

  tags        MeetupsToTags[]
  members     Members[]
  organizerId Int
}

model Tags {
  id      Int             @id @unique @default(autoincrement())
  title   String          @unique
  meetups MeetupsToTags[]
}

model MeetupsToTags {
  id Int @id @unique @default(autoincrement())

  meetup   Meetups @relation(fields: [meetupId], references: [id])
  meetupId Int

  tag   Tags @relation(fields: [tagId], references: [id])
  tagId Int
}

model Members {
  id Int @id @unique @default(autoincrement())

  meetup   Meetups @relation(fields: [meetupId], references: [id])
  meetupId Int

  userId Int
}
