generator client {
  provider = "prisma-client-js"
  output   = "./../../node_modules/@prisma-auth/client"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:957483@localhost:5432/authorization_microservice_db?schema=public"
}

model Users {
  id       Int      @id @unique @default(autoincrement())
  login    String   @unique
  email    String   @unique
  password String
  roles    String[]
  tokens   Tokens[]
}

model Tokens {
  id Int @id @unique @default(autoincrement())

  refreshToken String

  user   Users @relation(fields: [userId], references: [id])
  userId Int
}
