generator client {
  provider = "prisma-client-js"
  output   = "./../../../node_modules/@prisma-auth/client"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

enum Roles {
  USER
  ADMIN
}

model Users {
  id       Int      @id @unique @default(autoincrement())
  login    String   @unique
  email    String   @unique
  password String
  role     Roles    @default(USER)
  tokens   Tokens[]
}

model Tokens {
  id Int @id @unique @default(autoincrement())

  refreshToken String

  user   Users @relation(fields: [userId], references: [id])
  userId Int
}
