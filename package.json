{
  "name": "meetup-api-microservices",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/meetup-api-microservices/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/meetup-api-microservices/test/jest-e2e.json",
    "migrate:auth": "dotenv -e ./apps/authorization-microservice/.env -- npx prisma migrate dev --schema=./apps/authorization-microservice/prisma/schema.prisma",
    "migrate:meetup": "dotenv -e ./apps/meetup-microservice/.env -- npx prisma migrate dev --schema=./apps/meetup-microservice/prisma/schema.prisma",
    "generate:auth": "dotenv -e ./apps/authorization-microservice/.env -- npx prisma generate --schema=./apps/authorization-microservice/prisma/schema.prisma",
    "generate:meetup": "dotenv -e ./apps/meetup-microservice/.env -- npx prisma generate --schema=./apps/meetup-microservice/prisma/schema.prisma",
    "seed:auth": "dotenv -e ./apps/meetup-microservice/.env -- ts-node ./apps/authorization-microservice/prisma/seed.ts",
    "seed:meetup": "dotenv -e ./apps/meetup-microservice/.env -- ts-node ./apps/meetup-microservice/prisma/seed.ts",
    "db": "npm run migrate:auth && npm run migrate:meetup && npm run generate:auth && npm run generate:meetup && npm run seed:auth && npm run seed:meetup"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.9.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/elasticsearch": "^10.0.1",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/microservices": "^10.1.3",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.1.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "csv-stringify": "^6.4.2",
    "dotenv": "^16.3.1",
    "easy-yandex-s3": "^2.0.0",
    "elasticdump": "^6.103.1",
    "joi": "^17.9.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-yandex": "^0.0.5",
    "prisma": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "i": "^0.3.7",
    "jest": "^29.5.0",
    "npm": "^9.8.1",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
